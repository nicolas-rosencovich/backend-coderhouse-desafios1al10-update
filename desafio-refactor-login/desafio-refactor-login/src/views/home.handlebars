
<header>
    <div id="PreHeader">
        {{> submenu}}
    </div>
    <div id="MainHeader">
        <div id="LogoHeader">Lista del Sol</div>
        <div id="MenuHeader">{{>menu}}</div>
    </div>
</header>
<main>
    <div id="container">
        <h1>Productos Seleccionados</h1>
        <div id="productos">
            {{#if id}}
                <ul data-id={{producto._id}}>
                        <li><h3> {{producto.title}}<h3></li>
                        <li> {{producto.description}} </li>
                        <li>$ {{producto.price}} </li>
                        <li><img src={{producto.thumbnail}} alt={{producto.description}} width="250" > </li>
                        <li>Stock Actual: {{producto.stock}} </li>
                        <li><button class="comprar" data-id={{producto._id}} >Agregar al carrito</button></li>
                    </ul>

            {{else}}
                {{#each productos}}
                    <ul data-id={{_id}}>
                        <li><h3> {{title}}<h3></li>
                        <li> {{description}} </li>
                        <li>$ {{price}} </li>
                        <li><img src={{thumbnail}} alt={{description}} width="250" > </li>
                        <li class="codigo">Id: {{_id}} </li>
                        <li>Stock Actual: {{stock}} </li>
                        <li><button class="comprar" data-id={{_id}} >Agregar al carrito</button></li>
                    </ul>
                {{/each}}
            {{/if}}
        </div>
    </div>
    <div id="bloque"></div>
</main>
<footer>
    <ul>
        <li><a href="/" title="Home Page">Formulario</a></li>
        <li><a href="/chat" title="Chat Online">Chat WebSocket</a></li>
    </ul>
</footer>


