<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista del Sol</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div id="PreHeader">
      {{> submenu}}
    </div>
    <div id="MainHeader">
      <div id="LogoHeader">Lista del Sol</div>
      <div id="MenuHeader">{{>menu}}</div>
    </div>
  </header>
  <main>
    <div id="container">
      <div id="chat">
        <h2>Funcionando con Atlas</h2>
        <label for="mensaje">Mensaje </label>
        <input type="text" id="mensaje" />
        <button id="send-message">Enviar</button>
        <div id="mensajes">
        </div>
      </div>
      <h1>Viendo Carrito: {{carrito._id}}</h1>
      <div id="productos">
        {{#if carrito.products.length}}
          <ul>
            {{#each carrito.products}}
              <li>
                <h3><a href="/products/{{productId._id}}">{{productId.title}}</a></h3>
                <img src={{productId.thumbnail}} />
                <h4>Price: ${{productId.price}}</h4>
                <li>Cantidad: {{quantity}} </li>
              </li>
            {{/each}}
          </ul>
          <p>Total: ${{ sum (carrito.products.map(producto => producto.price * producto.quantity)) }}</p>
          <button id="vaciar-carrito">Vaciar Carrito</button>
        {{else}}
          <p>El carrito está vacío.</p>
        {{/if}}
      </div>
    </div>
  </main>
  <footer>
    <ul>
      <li><a href="/home">Página de Inicio</a></li>
      <li><a href="/products">Seguir Comprando</a></li>
    </ul>
  </footer>
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/chat.js"></script>
</body>
</html>
